JS
const textInput = document.getElementById("text-input");
const checkBtn = document.getElementById("check-btn");
const resultDiv = document.getElementById("result");

checkBtn.addEventListener('click', () => {
    let input = textInput.value.trim();

    if (!input) {
        alert('Please input a value');
        return;
    }

    // Eliminar espacios y convertir a minúsculas para la verificación
    const processedInput = input.toLowerCase().replace(/[^a-z0-9]/g, '');
    const reversedInput = processedInput.split("").reverse().join("");

    if (processedInput === reversedInput) {
        resultDiv.textContent = `${input} is a palindrome.`;
    } else {
        resultDiv.textContent = `${input} is not a palindrome.`;
    }
});
